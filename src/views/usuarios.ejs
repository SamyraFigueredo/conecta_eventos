<%- include('partials/header') %>

<h2>Lista de Usuários</h2>

<table border="1" cellpadding="8" cellspacing="0">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Ações</th>
    </tr>
    <% usuarios.forEach(function(usuario) { %>
        <tr>
            <td><%= usuario.id %></td>
            <td><%= usuario.nome %></td>
            <td><%= usuario.email %></td>
            <td>
                <a href="/usuarios/editar/<%= usuario.id %>">Editar</a> |
                <form action="/usuarios/deletar/<%= usuario.id %>" method="POST" style="display:inline;">
                    <button type="submit">Excluir</button>
                </form>
            </td>
        </tr>
    <% }); %>
</table>

<a href="/usuarios/novo" style="display:inline-block; margin-top:1rem; padding:0.5rem 1rem; background-color:#2c3e50; color:white; text-decoration:none; border-radius:5px;">Novo Usuário</a>

<%- include('partials/footer') %>
